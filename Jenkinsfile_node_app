pipeline {
    agent any
    triggers { 
        pollSCM('*/1 * * * *') 
    }
    stages {
        stage('build') {
            steps {
                echo "Building node application"
            }
        }
        stage('deploy-dev') {
            steps {
                script {
                    deploy("DEV")
                }
            }
        }
        stage('test-dev') {
            steps {
                script {
                    test("DEV")
                }
            }
        }
        stage('deploy-int') {
            steps {
                script {
                    deploy("INT")
                }
            }
        }
        stage('test-int') {
            steps {
                script {
                    test("INT")
                }
            }
        }
        stage('deploy-prd') {
            steps {
                script {
                    deploy("PRD")
                }
            }
        }
        stage('test-prd') {
            steps {
                script {
                    test("PRD")
                }
            }
        }
    }
}

def deploy(String environment){
    echo "Deployment on ${environment} environmnt triggered.."
    build job: "UI Tests", parameters: [string(name: "ENVIRONMENT", value:"${environment}")]
}

def test(String environment){
    echo "Tests on ${environment} environmnt triggered.."
}